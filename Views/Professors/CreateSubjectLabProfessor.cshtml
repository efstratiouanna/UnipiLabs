@model UnipiLabs.Models.LabsAnnouncements

@{
    ViewBag.Title = "Νέα ανακοίνωση εργαστηρίου";
    Layout = "~/Views/Shared/_LayoutProfessors.cshtml";

}

<h2>Νέα ανακοίνωση εργαστηρίου</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <b>Συμπληρώστε τα παρακάτω στοιχεία για την ολοκλήρωση της δημιουργίας νέου εργαστηρίου:</b> <br /><br />

    <div class="form-group">
        @Html.LabelFor(model => model.labID, htmlAttributes: new { @class = "control-label col-md-2" }) : LAB @ViewBag.labNumber

    </div>

    <br />

    <div>
        @Html.LabelFor(model => model.subjectExamed, htmlAttributes: new { @class = "control-label col-md-2" }) @ViewData["subjectTitle"]
    </div>

    <br />

    <div class="form-group">
        @Html.LabelFor(model => model.labDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.labDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.labDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="form-group">
        @Html.LabelFor(model => Model.labTime, "Ώρες εργαστηρίου", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{
                var selectList = new SelectList(
                    new List<SelectListItem>
                    {
                            new SelectListItem {Text = "08:00-10:00", Value = "08:00-10:00"},
                            new SelectListItem {Text = "10:00-12:00", Value = "10:00-12:00"},
                            new SelectListItem {Text = "12:00-14:00", Value = "12:00-14:00"},
                            new SelectListItem {Text = "14:00-16:00", Value = "14:00-16:00"},
                            new SelectListItem {Text = "16:00-18:00", Value = "16:00-18:00"},
                            new SelectListItem {Text = "18:00-20:00", Value = "18:00-20:00"},
                            new SelectListItem {Text = "20:00-22:00", Value = "20:00-22:00"}
}, "Value", "Text");
            }
            @Html.DropDownListFor(model => model.labTime, selectList, "Επιλέξτε ώρα", new { @class = "css-class" })     
            @Html.ValidationMessageFor(model => model.labTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div style="color: red" class="form-group">   <i> @ViewData["message"] </i> </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.labTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.labTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.labTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.examSlotsDuration, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.examSlotsDuration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.examSlotsDuration, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.numberOfTeamMembers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numberOfTeamMembers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numberOfTeamMembers, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.RegistrationDeadline, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RegistrationDeadline, new { @type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.RegistrationDeadline, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Δημιουργία" style="background-color: #b30000; color: white" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Πίσω", "MySubjectsProfessor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
