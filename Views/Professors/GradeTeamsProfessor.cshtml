@model UnipiLabs.ViewModels.ListModel<UnipiLabs.Models.Enrollments>

@{
    ViewBag.Title = "Βαθμολογία ομάδων φοιτητών";
    Layout = "~/Views/Shared/_LayoutProfessors.cshtml";
}
@Scripts.Render("~/Scripts/jquery-3.1.1.js")
@Scripts.Render("~/Scripts/jquery.validate.min.js")
@Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
@Scripts.Render("~/Scripts/moment.js")

<h2>Βαθμολογία ομάδων φοιτητών</h2>


@using (Html.BeginForm())
{   
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="table">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].selectedExamSlot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].teamID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].teamMembers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].grade)
                </th>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Items.Count();i++)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => m.Items[i].selectedExamSlot)
                @Html.HiddenFor(m => m.Items[i].selectedExamSlot)
            </td>
            <td>
                @Html.DisplayFor(m => m.Items[i].teamID)
                @Html.HiddenFor(m => m.Items[i].teamID)
            </td>
            <td>
                @Html.DisplayFor(m => m.Items[i].teamMembers)
                @Html.HiddenFor(m => m.Items[i].teamMembers)
            </td>
            <td>
                @Html.EditorFor(m => m.Items[i].grade)
            </td>
            @Html.HiddenFor(m => m.Items[i].primKeyID)
        </tr>
            }

        </table>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color: #b30000; color: white" value="Ολοκλήρωση βαθμολογίας" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

