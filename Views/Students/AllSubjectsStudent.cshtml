@model IEnumerable<UnipiLabs.Models.Subjects>

@{
    ViewBag.Title = "Όλα τα μαθήματα";
    Layout = "~/Views/Shared/_LayoutStudents.cshtml";
}

<h2>Όλα τα μαθήματα</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.subjectID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subjectTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.professorTeaching)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.subjectID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.subjectTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.professorTeaching)
        </td>
        <td>
            @Html.ActionLink("Εγγραφή", "RegisterToSubjectStudent", new { subjectID=item.subjectID, subjectTitle = item.subjectTitle }) |
            @Html.ActionLink("Λεπτομέρειες", "SubjectDetailsStudent", new { subjectID=item.subjectID })
        </td>
    </tr>
}

</table>
