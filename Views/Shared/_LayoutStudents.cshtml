<!DOCTYPE html>
<html>
<head>
    @using Microsoft.AspNet.Identity;
    @using UnipiLabs.DataAccess;
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Unipi Labs</title>
    <link href="~/Images/UnipiLogo1.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body>
    <div id="mynavbar" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a href='@Url.Action("MySubjectsStudent", "Students")'>
                    <img src="~/Images/UnipiLogo1.png" class="img-center" height="50" width="60" />
                </a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <
                    <li>@Html.ActionLink("Όλα τα μαθήματα", "AllSubjectsStudent", "Students")</li>
                    <li>@Html.ActionLink("Τα μαθήματά μου", "MySubjectsStudent", "Students")</li>
                    <li>@Html.ActionLink("Τα εργαστήριά μου", "MyLabsStudent", "Students")</li>
                    <li>@Html.ActionLink("Οι βαθμολογίες μου", "MyGradesStudent", "Students")</li>
                    <li>@Html.ActionLink("Ημερολόγιο Εργαστηρίων", "LabsCalendar", "Students")</li>
                    <li class="btn-group nav">
                        <button type="button" class="btn navbar-btn" style="background-color:#000080 ; color:white">@ViewBag.UserName</button>
                        <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Επεξεργασία", "EditProfileStudent")</li>
                            <li>@Html.ActionLink("Αποσύνδεση", "LogOut", "Home")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Unipi Labs</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetime")
    @RenderSection("scripts", required: false)



    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _LayoutStudents.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the page and send notifications.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var hub = $.connection.notificationHub;
            // Create a function that the hub can call back to display messages.
            hub.client.addNewMessageToPage = function (message) {
                // Εμφάνιση ειδοποίησης στη σελίδα του χρήστη
                alert("Νέα ειδοποίηση:" + message)
            };

            // Start the connection.
            $.connection.hub.start().done(function () {

            });
        });
    </script>

</body>
</html>
